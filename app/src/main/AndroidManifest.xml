<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.ismailamrani.comptable">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.camera.autofocus"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:name=".app.OGApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ui.startup.LoginActivity"/>
        <activity android:name=".ui.startup.HomeActivity"/>
        <activity android:name=".ui.ProductsActivity">
            <intent-filter>
                <action android:name="android.intent.action.Produis"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.ClientsActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AddProductActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.AddProduit"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.ModifierProduitActivity"/>
        <activity android:name=".ui.AddClientActivity"/>
        <activity android:name=".ui.EditClientActivity"/>
        <activity android:name=".ui.ProductDetailsActivity"/>
        <activity android:name=".fournisseur.AddFournisseurAsync"/>
        <activity android:name=".ui.AddLocalActivity"/>
        <activity
            android:name=".ui.InformationActivity"
            android:theme="@style/AppTheme.CustomTheme"/>
        <activity android:name=".ui.AddChargeActivity"/>
        <activity
            android:name=".ui.SpinnerChargeActivity"
            android:theme="@style/AppTheme.CustomTheme"/>
        <activity android:name=".ui.SuppliersActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.InformationFournisseurActivity"
            android:theme="@style/AppTheme.CustomTheme"/>
        <activity android:name=".ui.AddSupplierActivity"/>
        <activity android:name=".ui.EditFournisseurActivity"/>
        <activity
            android:name=".ui.SalesActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_vente"
            android:screenOrientation="portrait"/>
        <activity android:name=".ui.StockActivity"/>
        <activity
            android:name=".ui.PurchasesActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.startup.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".ui.startup.ActivationActivity"/>
        <activity android:name=".ui.OrdersActivity"/>
        <activity android:name=".ui.ChargesActivity"/>
        <activity android:name=".ui.AccountingDetailsActivity">
        </activity>
        <activity android:name=".ui.AccountingHomeActivity">
        </activity>
    </application>

</manifest>