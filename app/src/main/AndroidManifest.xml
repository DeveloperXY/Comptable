<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ismailamrani.comptable">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity android:name=".ui.LoginActivity" />
        <activity android:name=".ui.HomeActivity" />
        <activity android:name=".ui.ProductsActivity">
            <intent-filter>
                <action android:name="android.intent.action.Produis" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ClientListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AddProductActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.AddProduit" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.ModifierProduitActivity" />
        <activity android:name=".ui.AddClientActivity" />
        <activity android:name=".ui.EditClientActivity" />
        <activity android:name=".ui.Produit_InfoActivity" />
        <activity android:name=".fournisseur.AddFournisseurAsync" />
        <activity android:name=".charges.AddCharge" />
        <activity android:name=".ui.AddLocalActivity" />
        <activity
            android:name=".ui.InformationActivity"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity android:name=".ui.NewChargeActivity" />
        <activity
            android:name=".ui.SpinnerChargeActivity"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity android:name=".ui.FournisseurListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.InformationFournisseurActivity"
            android:theme="@style/AppTheme.CustomTheme" />
        <activity android:name=".ui.AddFournisseurActivity" />
        <activity android:name=".ui.EditFournisseurActivity" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".ui.SalesActivity"
            android:configChanges="orientation"
            android:label="@string/title_activity_vente"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.StockActivity" />
        <activity android:name=".ui.ColoredStatusBarActivity" />
        <activity
            android:name=".ui.PurchasesActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.SaleOrdersActivity"/>
        <activity android:name=".ui.PurchaseOrdersActivity"/>
    </application>

</manifest>