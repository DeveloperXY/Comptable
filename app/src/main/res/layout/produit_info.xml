<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:costum="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="246">

        <include layout="@layout/custom_actionbar_include"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="226">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.example.ismailamrani.comptable.customitems.CustomCarreWidthLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    costum:size="144">

                    <ImageView
                        android:id="@+id/Imageaff"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:transitionName="productImageAnim"/>

                    <com.example.ismailamrani.comptable.customitems.CustomHeightLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="#9048627b"
                        android:transitionName="productLabelAnim"
                        costum:size="20">

                        <com.example.ismailamrani.comptable.customitems.CustomTextView
                            android:id="@+id/Libelleaff"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:shadowColor="#000000"
                            android:shadowDx="2"
                            android:shadowDy="2"
                            android:shadowRadius="2"
                            android:textColor="#ffffff"
                            costum:Arabic=""
                            costum:Font="cgrb.ttf"
                            costum:Frensh=""
                            costum:Size="14"/>

                    </com.example.ismailamrani.comptable.customitems.CustomHeightLayout>

                </com.example.ismailamrani.comptable.customitems.CustomCarreWidthLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.example.ismailamrani.comptable.customitems.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#48627b"
                                costum:Arabic="منتوج"
                                costum:Font="cgrb.ttf"
                                costum:Frensh="Prix HT : "
                                costum:Size="13"/>

                            <com.example.ismailamrani.comptable.customitems.CustomTextView
                                android:id="@+id/PrixHTaff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#5a5a5a"
                                costum:Arabic=""
                                costum:Font="cgr.ttf"
                                costum:Frensh=""
                                costum:Size="12"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.example.ismailamrani.comptable.customitems.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#48627b"
                                costum:Arabic="منتوج"
                                costum:Font="cgrb.ttf"
                                costum:Frensh="Prix TTC : "
                                costum:Size="13"/>

                            <com.example.ismailamrani.comptable.customitems.CustomTextView
                                android:id="@+id/PrixTTCaff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#5a5a5a"
                                costum:Arabic=""
                                costum:Font="cgr.ttf"
                                costum:Frensh=""
                                costum:Size="12"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.example.ismailamrani.comptable.customitems.CustomTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#48627b"
                                costum:Arabic="منتوج"
                                costum:Font="cgrb.ttf"
                                costum:Frensh="Quantité : "
                                costum:Size="13"/>

                            <com.example.ismailamrani.comptable.customitems.CustomTextView
                                android:id="@+id/Stockaff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#5a5a5a"
                                costum:Arabic=""
                                costum:Font="cgr.ttf"
                                costum:Frensh=""
                                costum:Size="12"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:src="@drawable/ic_codebar"/>

                            <com.example.ismailamrani.comptable.customitems.CustomTextView
                                android:id="@+id/Codeaff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#5a5a5a"
                                costum:Arabic=""
                                costum:Font="cgr.ttf"
                                costum:Frensh=""
                                costum:Size="12"/>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <include layout="@layout/drawer_include"/>
</android.support.v4.widget.DrawerLayout>