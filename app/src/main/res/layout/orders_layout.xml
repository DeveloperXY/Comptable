<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:showIn="@layout/activity_purchase_orders_activity">

    <include
        android:id="@+id/emptyLayout"
        layout="@layout/empty_view_include" />

    <include
        android:id="@+id/errorLayout"
        layout="@layout/stock_network_error_include" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="246">

        <include layout="@layout/custom_actionbar_include" />

        <include layout="@layout/swipe_refresh_layout_include" />

    </LinearLayout>

    <include layout="@layout/progressbar_layout_include" />
</merge>