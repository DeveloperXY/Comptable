<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ismailamrani.comptable.ui.ChargesActivity">

    <include
        android:id="@+id/emptyStockLayout"
        layout="@layout/empty_view_include"/>

    <include
        android:id="@+id/errorStockLayout"
        layout="@layout/network_error_include"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="246">

        <include layout="@layout/custom_actionbar_include"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/swipeRefreshLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="206">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/chargesRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </android.support.v4.widget.SwipeRefreshLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:background="@color/colorChargeFooter"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:id="@+id/footerLayout">

            <TextView
                android:id="@+id/totalPriceLabel"
                android:background="@drawable/total_price_tag_background"
                android:layout_width="wrap_content"
                android:text="14.000 DH"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:layout_alignParentRight="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Total:"
                android:id="@+id/totalLabel"
                android:layout_toLeftOf="@+id/totalPriceLabel"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/colorWhite"
                android:layout_marginRight="16dp"/>

        </RelativeLayout>

    </LinearLayout>

    <include layout="@layout/progressbar_layout_include"/>

</RelativeLayout>
