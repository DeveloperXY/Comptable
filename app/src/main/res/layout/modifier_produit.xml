<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:costum="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="246">

        <include layout="@layout/custom_actionbar_include"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="226"
            android:orientation="horizontal"
            android:weightSum="144">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="144"
                android:background="@mipmap/ic_bg_add"
                android:orientation="vertical"
                android:weightSum="220">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="88">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:orientation="vertical">

                        <com.octagen.customviews.CustomCarreLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/add_photo"
                            costum:size="31">

                            <com.octagen.customviews.CustomCarreLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                costum:size="29">

                                <ImageView
                                    android:id="@+id/ImageModifier"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/ic_add_photo"
                                    android:transitionName="productImageAnim"/>

                            </com.octagen.customviews.CustomCarreLayout>

                        </com.octagen.customviews.CustomCarreLayout>

                        <com.octagen.customviews.CustomTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#464646"
                            costum:Arabic="منتوج"
                            costum:Font="cgrb.ttf"
                            costum:Frensh="Ajouter Une Photo"
                            costum:Size="11"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="17"
                    android:orientation="horizontal"
                    android:weightSum="140">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"></RelativeLayout>

                    <com.octagen.customviews.CustumEditText
                        android:id="@+id/nom_produit_modifier"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="130"
                        android:background="@drawable/add_edittext"
                        android:gravity="center_vertical"
                        android:hint="@string/product_name"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#464646"
                        android:textColorHint="#464646"
                        android:transitionName="productLabelAnim"
                        costum:Arabic=""
                        costum:Font="cgr.ttf"
                        costum:Frensh=""
                        costum:Size="12"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"></RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="17"
                    android:orientation="horizontal"
                    android:weightSum="140">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"></RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="64"
                        android:background="@drawable/add_edittext"
                        android:orientation="horizontal"
                        android:weightSum="64">

                        <com.octagen.customviews.CustumEditText
                            android:id="@+id/Prix_HT_produit_modifier"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="48"
                            android:background="#00ffffff"
                            android:gravity="center_vertical"
                            android:hint="@string/ht_price"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#464646"
                            android:textColorHint="#464646"
                            costum:Arabic=""
                            costum:Font="cgr.ttf"
                            costum:Frensh=""
                            costum:Size="12"
                            />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.5"
                            android:background="#48627b"></RelativeLayout>

                        <com.octagen.customviews.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="15.5"
                            android:gravity="center"
                            android:textColor="#48627b"
                            costum:Arabic="منتوج"
                            costum:Font="cgrb.ttf"
                            costum:Frensh="DH"
                            costum:Size="12"/>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"></RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="64"
                        android:background="@drawable/add_edittext"
                        android:orientation="horizontal"
                        android:weightSum="64">

                        <com.octagen.customviews.CustumEditText
                            android:id="@+id/Prix_TTC_produit_modifier"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="48"
                            android:background="#00ffffff"
                            android:gravity="center_vertical"
                            android:hint="@string/ttc_price"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#464646"
                            android:textColorHint="#464646"
                            costum:Arabic=""
                            costum:Font="cgr.ttf"
                            costum:Frensh=""
                            costum:Size="12"
                            />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_weight="0.5"
                            android:background="#48627b"></RelativeLayout>

                        <com.octagen.customviews.CustomTextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="15.5"
                            android:gravity="center"
                            android:textColor="#48627b"
                            costum:Arabic="منتوج"
                            costum:Font="cgrb.ttf"
                            costum:Frensh="DH"
                            costum:Size="12"/>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="3"></RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="17"
                    android:orientation="horizontal"
                    android:weightSum="140">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"></RelativeLayout>

                    <com.octagen.customviews.CustomTextView
                        android:id="@+id/CodeBarre"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="112"
                        android:background="@drawable/add_textview"
                        android:gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:textColor="#464646"
                        costum:Arabic="منتوج"
                        costum:Font="cgr.ttf"
                        costum:Frensh="@string/bar_code"
                        costum:Size="12"/>

                    <RelativeLayout
                        android:id="@+id/AddCodeBarre"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="18"
                        android:background="#48627b"
                        android:paddingBottom="2dp"
                        android:paddingTop="2dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:src="@mipmap/ic_add_cb"/>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="76">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@drawable/add_btn"
                        android:clickable="true">

                        <com.octagen.customviews.CustomTextView
                            android:id="@+id/modifierproduit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:gravity="center_vertical"
                            android:padding="8dp"
                            android:textColor="#ffffff"
                            costum:Arabic="منتوج"
                            costum:Font="cgr.ttf"
                            costum:Frensh="@string/save"
                            costum:Size="16"
                            />

                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <include layout="@layout/drawer_include"/>

</android.support.v4.widget.DrawerLayout>