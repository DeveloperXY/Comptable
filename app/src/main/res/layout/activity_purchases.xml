<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_vente"
        android:orientation="vertical"
        android:weightSum="246">

        <include layout="@layout/custom_actionbar_include" />

        <LinearLayout
            android:id="@+id/mainLayout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="226"
            android:orientation="vertical"
            android:weightSum="2264">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="300">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:src="@drawable/vente" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="33" />

            <LinearLayout
                android:id="@+id/layoutForm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="952"
                android:orientation="horizontal"
                android:weightSum="1390">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1250"
                    android:orientation="vertical"
                    android:weightSum="1260">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="60" />

                    <LinearLayout
                        android:id="@+id/layoutFournisseur"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="200"
                        android:background="@drawable/vente_style"
                        android:orientation="horizontal"
                        android:weightSum="1196">

                        <EditText
                            android:id="@+id/supplierField"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1000"
                            android:background="@android:color/transparent"
                            android:enabled="false"
                            android:hint="Fournisseur"
                            android:paddingLeft="20dp" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="196">

                            <ImageView
                                android:id="@+id/supplierSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                android:scaleType="fitEnd"
                                android:src="@drawable/spinner" />
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="40" />

                    <LinearLayout
                        android:id="@+id/layoutProduit"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="200"
                        android:background="@drawable/vente_style"
                        android:orientation="horizontal"
                        android:weightSum="1196">

                        <EditText
                            android:id="@+id/productField"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1000"
                            android:background="@android:color/transparent"
                            android:enabled="false"
                            android:hint="Produit"
                            android:paddingLeft="20dp" />

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="196">

                            <ImageView
                                android:id="@+id/productSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:padding="5dp"
                                android:scaleType="fitEnd"
                                android:src="@drawable/spinner" />
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="40" />

                    <LinearLayout
                        android:id="@+id/layoutQte"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="200"
                        android:background="@drawable/vente_style"
                        android:orientation="horizontal"
                        android:weightSum="1174">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1032">

                            <EditText
                                android:id="@+id/quantityField"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@android:color/transparent"
                                android:hint="QuantitÃ©"
                                android:inputType="number"
                                android:paddingLeft="20dp" />
                        </RelativeLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="40" />

                    <LinearLayout
                        android:id="@+id/layoutPrice"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="200"
                        android:background="@drawable/vente_style"
                        android:orientation="horizontal"
                        android:weightSum="1174">

                        <EditText
                            android:id="@+id/priceField"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1026"
                            android:background="@android:color/transparent"
                            android:hint="Prix unitaire"
                            android:inputType="numberDecimal"
                            android:paddingLeft="20dp" />

                        <include layout="@layout/dh_layout_include" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="40" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="200"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:weightSum="1260">

                        <Button
                            android:id="@+id/nextButton"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="200"
                            android:background="@drawable/add_btn"
                            android:text="Suivant >>"
                            android:textColor="#ffffffff" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:layout_weight="37" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="40" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="70" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30" />

            <include layout="@layout/order_products_list_include" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30" />

            <include layout="@layout/total_price_layout_include" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="30" />

            <include layout="@layout/validate_button_layout_include" />

        </LinearLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
