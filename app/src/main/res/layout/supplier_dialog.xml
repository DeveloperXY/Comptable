<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/supplierLogo"
            android:layout_weight="80"
            android:src="@drawable/flogo"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView4"
                    android:src="@drawable/adresseclient"
                    android:layout_weight="20"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Hay Saada, Route Ain Chkef"
                    android:maxLines="1"
                    android:id="@+id/bottomAddressLabel"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:layout_weight="80"
                    android:gravity="left|center_vertical"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="50"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView5"
                    android:src="@drawable/fix"
                    android:layout_weight="20"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="+212 694363053"
                    android:id="@+id/supplierPhoneLabel"
                    android:textSize="18sp"
                    android:ellipsize="end"
                    android:layout_weight="80"
                    android:gravity="left|center_vertical"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlue"
        android:alpha="0.6">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Samsung"
            android:id="@+id/supplierTitleLabel"
            android:textSize="24sp"
            android:padding="8dp"
            android:gravity="left"
            android:textColor="@color/colorWhite"
            android:layout_toLeftOf="@+id/deleteSupplierItem"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hay Saada, Route Ain Chkef"
            android:id="@+id/supplierAddressLabel"
            android:textSize="12sp"
            android:gravity="left"
            android:textColor="@color/colorWhite"
            android:layout_below="@+id/supplierTitleLabel"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/closeDialogItem"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:layout_alignTop="@+id/supplierTitleLabel"
            android:layout_alignBottom="@+id/supplierTitleLabel"
            android:scaleType="fitXY"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editSupplierItem"
            android:src="@android:drawable/ic_menu_edit"
            android:layout_toLeftOf="@+id/closeDialogItem"
            android:layout_alignTop="@+id/supplierTitleLabel"
            android:layout_alignBottom="@+id/supplierTitleLabel"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deleteSupplierItem"
            android:src="@android:drawable/ic_menu_delete"
            android:layout_toLeftOf="@+id/editSupplierItem"
            android:layout_alignTop="@+id/supplierTitleLabel"
            android:layout_alignBottom="@+id/supplierTitleLabel"/>
    </RelativeLayout>

</RelativeLayout>